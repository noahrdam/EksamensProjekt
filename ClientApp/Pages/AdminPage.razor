@page "/admin"
@using Core.Model
@inject HttpClient httpClient
@inject IJSRuntime JS

<h1>Alle ansøgninger </h1>

@if (applications == null)
{
    <p><em>Loading...</em></p>
}
else if (!applications.Any())
{
    <p><em>No applications found.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Kræv Nummer</th>
                <th>Forældre navn</th>
                <th>Mail</th>
                <th>Samtykke</th>
                <th>Barnets navn</th>
                <th>Alder</th>
                <th>Tøjstørrelse</th>
                <th>Interesser</th>
                <th>Fra</th>
                <th>Til</th>
                <th>Adresse</th>
                
               

            </tr>
        </thead>
        <tbody>
            @foreach (var ap in applications)
            {
                <tr>
                    <td>@ap.Parent.KræwNumber</td>
                    <td>@ap.Parent.Name</td>
                    <td>@ap.Parent.Mail</td>
                    <td>@ap.ConsentForm</td>
                    <td>@ap.Child.Name</td>
                    <td>@ap.Child.Age</td>
                    <td>@ap.Child.ClothingSize</td>
                    <td>@ap.Child.Interests</td>
                    <td>@ap.Event.From</td>
                    <td>@ap.Event.To</td>
                    <td>@ap.Event.Location</td>

                </tr>
            }
        </tbody>
    </table>
}

<h1>Ansøgninger</h1>
<button @onclick="LoadApplications">Hent alle Applications</button>

@if (applications == null)
{
    <p><em>Loading...</em></p>
}
else if (applications.Any())
{
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var ap in applications)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@ap.Parent.Name</h5>
                        <p class="card-text">@ap.</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">BeenBefore: @ap.BeenBefore</li>
                        <li class="list-group-item">Comment: @ap.Comment</li>
@*                         <li class="list-group-item">Classroom: @ap.ConsentForm</li>
 *@                        <li class="list-group-item">Parent: @ap.Parent</li>
                    </ul>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No applications found.</p>
}


@code {
    private List<Application> applications;

    private string serverURL = "https://localhost:7095/";

    protected override async Task OnInitializedAsync()
    {
        await LoadApplications();
    }

    public async Task LoadApplications()
    {
            applications = await httpClient.GetFromJsonAsync<List<Application>>($"{serverURL}api/aps/getall");
}}
